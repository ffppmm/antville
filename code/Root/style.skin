body, td, span {
  font-family: <% layout.textfont %>;
  font-size: <% layout.textsize %>;
  font-weight: normal;
  color: <% layout.textcolor %>;
  vertical-align: top;
  background-color: <% layout.bgcolor %>;
}

a {
  text-decoration: none;
  color: <% layout.linkcolor %>;
}

a:hover {
  background-color: <% layout.linkcolor %>;
  color: <% layout.textcolor %>;
}

ul {
  list-style: url("<% layout.image as="url" name="bullet" %>") circle;
}

.header {
  background-image: url("<% layout.image as="url" name="headbg" %>");
  background-repeat: repeat-x;
  text-align: right;
  vertical-align: middle;
}

.message {
  font-family: <% layout.textfont %>;
  font-size: <% layout.textsize %>;
  padding: 1px;
  color: #FF3300;
  background-color: <% layout.bgcolor %>;
}

.statusdark {
  width: 198px;
  font-family: <% layout.smallfont %>;
  font-size: <% layout.smallsize %>;
  display: block;
  padding-top: 3px;
  padding-bottom: 3px;
}

.statuslight {
  width: 198px;
  font-family: <% layout.smallfont %>;
  font-size: <% layout.smallsize %>;
  color: #999999;
  display: block;
  padding-top: 3px;
  padding-bottom: 3px;
}

.small {
  font-family: <% layout.smallfont %>;
  font-size: <% layout.smallsize %>;
  font-color: <% layout.smallcolor %>;
  color: #666666;
}

.sep {
  width: 198px;
  height: 1px;
  background-image: url("<% layout.image as="url" name="dot" %>");
}

.pageTitle {
  font-family: <% layout.titlefont %>;
  font-size: <% layout.titlesize %>;
  font-weight: bold;
  color: #FF3300;
  padding-bottom: 10pt;
}

.pagelink {
   margin-top: 2px;
   margin-bottom: 2px;
}

