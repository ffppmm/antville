/* page navigation bar */

div.pageNav {
   margin-top:10px;
   height:14px;
   font-size:11px;
}
div.pageNavSummary {
   padding:2px;
   background-color:#efefef;
   border-bottom:1px solid #cccccc;
   text-align:left;
}
div.pageNavBar {
   padding:2px;
   text-align:right;
}
div.pageNavBar span {
   padding-left:2px;
   padding-right:2px;
}
div.pageNavBar span.pageNavSelItem {
   font-weight:bold;
}
